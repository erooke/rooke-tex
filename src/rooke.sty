  % https://tex.stackexchange.com/questions/134863/command-for-transverse-and-not-pitchfork-as-used-in-guillemin-and-pollack#134869
  \newcommand{\transv}{\mathrel{\text{\tpitchfork}}}
  \newcommand{\tpitchfork}{%
    \vbox{
      \baselineskip\z@skip
      \lineskip-.52ex
      \lineskiplimit\maxdimen
      \m@th
      \ialign{##\crcr\hidewidth\smash{$-$}\hidewidth\crcr$\pitchfork$\crcr}
    }%
  }
